@using Microsoft.AspNetCore.Mvc.TagHelpers
@model LotsOfFun.Ui.Mvc.Models.People.PeopleViewModel

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Personen</h2>
        <div class="btn-group">
            <a asp-action="ExportNewsletterEmails" class="btn btn-outline-info">
                <i class="bi bi-envelope"></i> Nieuwsbrief Abonnees
            </a>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nieuwe Persoon
            </a>
        </div>
    </div>

    @if (Model.People?.Any() == true)
    {
        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Naam</th>
                            <th scope="col">Email</th>
                            <th scope="col" class="text-center">Acties</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.People)
                        {
                            <partial name="PersonRowPartial" model="item" />
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer bg-light">
                <small class="text-muted">Totaal: @Model.TotalCount personen</small>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Er zijn nog geen personen toegevoegd.
        </div>
    }
</div>

@section Modals {
    <!-- Delete Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Bevestig verwijderen</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Weet u zeker dat u <strong id="PersonToDelete"></strong> wilt verwijderen?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuleren</button>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="Id" />
                        <button type="submit" class="btn btn-danger">Verwijderen</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

}

@section Scripts
{
    <script>
        $(function(){
            $("[data-type='deleteButton']").on("click", function(){

                let id = $(this).data("id");

                let input = $("#deleteModal input[name='Id']")                
               
                $(input).val(id);
                let name = $(this).data("name");
                $(".modal-body strong[id='PersonToDelete']").html(name);

            });
        });
    </script>
}