@model LotsOfFun.Ui.Mvc.Models.Activity.CreateEditActivityViewModel 

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<fieldset class="border p-3 mb-3">
    <legend class="w-auto px-2">Activiteit Info</legend>
    <div class="mb-3">
        
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

   
</fieldset>
<fieldset class="border p-3 mb-3">
    <legend class="w-auto px-2">Address</legend>

    <!-- Location section -->
    <div class="mb-3">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <label asp-for="SelectedLocationId" class="form-label mb-0">Kies een locatie</label>
            <button type="button" class="btn btn-sm btn-outline-primary" id="addLocationButton">Locatie toevoegen</button>
        </div>
        <div id="knownLocation">
            <select id="locationSelect"
                    asp-for="SelectedLocationId"
                    class="form-select"
                    data-locations='@Html.Raw(Model.LocationDataJson)'
                    data-is-edit="@Model.IsEdit.ToString().ToLower()">
                @foreach (var location in Model.Locations)
                {
                    <option value="@location.Value" selected="@(location.Value == Model.SelectedLocationId.ToString())">
                        @location.Text
                    </option>
                }
            </select>
            <span asp-validation-for="SelectedLocationId" class="text-danger"></span>
        </div>

        <div id="newLocation" class="invisible mt-3">
            <label asp-for="Location" class="form-label">Nieuwe locatie</label>
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
    </div>

    <!-- Street, Number, Unit -->
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Street" class="form-label"></label>
            <input asp-for="Street" id="streetInput" class="form-control" />
            <span asp-validation-for="Street" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="Number" class="form-label"></label>
            <input asp-for="Number" id="numberInput" class="form-control" />
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="Unit" class="form-label"></label>
            <input asp-for="Unit" id="unitInput" class="form-control" />
            <span asp-validation-for="Unit" class="text-danger"></span>
        </div>
    </div>

    <!-- Postal Code and City -->
    <div class="row mb-3">
        <div class="col-md-4">
            <label asp-for="PostalCode" class="form-label"></label>
            <input asp-for="PostalCode" id="postalCodeInput" class="form-control" />
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>
        <div class="col-md-8">
            <label asp-for="City" class="form-label"></label>
            <input asp-for="City" id="cityInput" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>

    
</fieldset>
<fieldset>
    <legend class="w-auto px-2">Tijdstip</legend>
    <div class="row mb-3">
        <div class="col-md-4">
            <label asp-for="StartDate" class="form-label"></label>
            <input type="date" name="StartDate" class="form-control"
                   value="@Model.StartDate.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="StartTime" class="form-label"></label>
            <input type="time" name="StartTime" class="form-control"
                   value="@Model.StartTime.ToString("HH\\:mm")" />
            <span asp-validation-for="StartTime" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="EndTime" class="form-label"></label>
            <input type="time" name="EndTime" class="form-control"
                   value="@Model.EndTime.ToString("HH\\:mm")" />
            <span asp-validation-for="EndTime" class="text-danger"></span>
        </div>
    </div>
</fieldset>

<fieldset>
    <legend class="w-auto px-2">Aantal deelnemers</legend>
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="MinimumParticipants" class="form-label"></label>
            <input asp-for="MinimumParticipants" class="form-control" />
            <span asp-validation-for="MinimumParticipants" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="MaximumParticipants" class="form-label"></label>
            <input asp-for="MaximumParticipants" class="form-control" />
            <span asp-validation-for="MaximumParticipants" class="text-danger"></span>
        </div>
    </div>
        
   
</fieldset>

